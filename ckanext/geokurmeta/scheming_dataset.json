{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "CKAN dataset schema for GeoKur",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
	  "validators": "not_empty",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
	{
      "field_name": "owner_org",
      "label": "Organization / Contact Point",
      "preset": "dataset_organization"
    },
	{
      "field_name": "tag_string",
      "label": "Keywords",
      "preset": "tag_string_autocomplete_fix",
      "form_placeholder": "eg. economy, mental health, government"
    },
	{
      "field_name": "geokur_dataset_distribution",
      "label": "Dataset Distribution",
      "validators": "ignore_missing unicode",
      "form_placeholder": ""
    },
	{
      "field_name": "spatial",
      "label": "Spatial / Geographic Coverage",
      "validators": "not_empty",
	  "form_snippet": "json.html",
      "form_placeholder": "",
	  "display_snippet": "json.html"
    },
	{
      "field_name": "temporal_start",
      "label": "Temporal Coverage Start",
      "validators": "ignore_missing",
      "form_snippet": "date.html",
      "form_placeholder": ""
    },
	{
      "field_name": "temporal_end",
      "label": "Temporal Coverage End",
      "validators": "ignore_missing",
      "form_snippet": "date.html",
      "form_placeholder": ""
    },
	{
      "field_name": "theme",
      "label": "Theme / Category",
      "validators": "not_empty unicode",
      "form_placeholder": "https://inspire.ec.europa.eu/theme/",
	  "help_text": "Links to INSPIRE ontology: https://inspire.ec.europa.eu/theme",
	  "display_property": "foaf:homepage",
	  "display_snippet": "link.html"
    },
	{
      "field_name": "geokur_documentation",
      "label": "Documentation",
	  "validators": "ignore_missing unicode",
      "form_snippet": "markdown.html",
	  "help_text": "eg. Links to publication",
      "form_placeholder": ""
    },
	{
      "field_name": "geokur_identifier",
      "label": "Identifier",
	  "validators": "not_empty",
      "form_placeholder": ""
    },
	{
      "field_name": "geokur_is_version_of",
      "label": "Is Version of",
	  "validators": "ignore_missing unicode",
      "form_placeholder": ""
    },
	{
      "field_name": "url",
      "label": "Landing Page",
	  "help_text": "links to project website or dataset's page",
      "form_placeholder": "https://example.com",
	  "display_property": "foaf:homepage",
	  "display_snippet": "link.html"
    },
	{
      "field_name": "geokur_other_identifier",
      "label": "Other Identifier",
	  "validators": "ignore_missing unicode",
      "form_placeholder": "links to DOI"
    },
	{
      "field_name": "geokur_related_resource",
      "label": "Related Resource",
      "validators": "ignore_missing unicode if_not_missing_package_id_or_name_exists",
      "form_placeholder": "eg. related-dataset"
    },
	{
      "field_name": "geokur_reference_system",
      "label": "Reference System",
	  "validators": "ignore_missing unicode",
      "form_placeholder": "Links to OGC EPSG Register"
    },
	{
      "field_name": "geokur_spatial_resolution",
      "label": "Spatial Resolution",
	  "validators": "ignore_missing unicode",
      "form_placeholder": "in meters"
    },
	{
      "field_name": "geokur_spatial_resolution_as",
      "label": "Spatial Resolution as",
	  "validators": "ignore_missing unicode",
      "form_placeholder": "equivalent scale, angular distance, vertical distance"
    },
	{
      "field_name": "geokur_temp_resolution",
      "label": "Temporal Resolution",
	  "validators": "ignore_missing unicode",
      "form_placeholder": ""
    },
	{
      "field_name": "geokur_generated_by",
      "label": "Generated by",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
	{
      "field_name": "geokur_used_by",
      "label": "Used by",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
	{
      "field_name": "geokur_quality_annotation",
      "label": "Has Quality Annotation",
	  "validators": "ignore_missing unicode",
      "form_placeholder": ""
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0"
    },
    {
      "field_name": "author",
      "label": "Author",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
	  "validators": "if_empty_same_as(url) unicode",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete_fix"
    }
  ]
}
